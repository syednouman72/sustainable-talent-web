</MainLayout>

<style>
/* Container & layout */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
}

.section {
  padding: 96px 0;
  background: var(--bg-section);
  position: relative;
}

.section.light {
  background:
    radial-gradient(1100px 600px at 20% 5%, rgba(99,102,241,0.09), transparent 65%),
    radial-gradient(1100px 600px at 80% 10%, rgba(56,189,248,0.07), transparent 62%),
    var(--bg-page);
}

/* Hero */
.hero {
  padding: 100px 0 60px;
  background: var(--bg-section);
  position: relative;
  overflow: hidden;
}

.hero-accent {
  position: absolute;
  top: -150px;
  left: 10%;
  width: 600px;
  height: 600px;
  background: radial-gradient(circle, rgba(99, 102, 241, 0.18), transparent 70%);
  border-radius: 50%;
  filter: blur(100px);
  animation: float 10s ease-in-out infinite;
  pointer-events: none;
  opacity: 0.7;
}

@keyframes float {
  0%, 100% { transform: translateY(0px) scale(1); }
  50% { transform: translateY(-40px) scale(1.1); }
}

.hero-grid {
  display: grid;
  grid-template-columns: 1.1fr 0.9fr;
  gap: 56px;
  align-items: center;
  position: relative;
}

.hero-left, .hero-right {
  position: relative;
  z-index: 1;
}

.subhead {
  margin: 20px 0 0;
  color: var(--text-secondary);
  font-size: 19px;
  line-height: 1.7;
  max-width: 62ch;
}

/* Animated Pill */
.pill {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 9px 14px;
  border-radius: 999px;
  border: 1px solid var(--border-light);
  background: rgba(255, 255, 255, 0.75);
  box-shadow: 0 10px 26px rgba(15, 23, 42, 0.08);
  user-select: none;
  white-space: nowrap;
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
}

.pill .dot {
  width: 10px;
  height: 10px;
  border-radius: 999px;
  background: rgba(99, 102, 241, 0.90);
  box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.15);
  flex: 0 0 auto;
}

.pill .text {
  font-size: 12px;
  font-weight: 700;
  letter-spacing: 0.8px;
  text-transform: uppercase;
  color: var(--text-secondary);
}

.pill.animated {
  position: relative;
  --mx: 50%;
  background:
    radial-gradient(160px 80px at var(--mx) 50%, rgba(99, 102, 241, 0.16), transparent 65%),
    radial-gradient(160px 80px at calc(var(--mx) + 20%) 65%, rgba(56, 189, 248, 0.14), transparent 65%),
    rgba(255, 255, 255, 0.80);
  transition: transform 0.2s ease, border-color 0.2s ease, background 0.2s ease;
}

.pill.animated .text {
  background: linear-gradient(90deg,
    var(--text-primary),
    rgba(99, 102, 241, 0.92),
    rgba(56, 189, 248, 0.92),
    var(--text-primary)
  );
  background-size: 220% 100%;
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  animation: textFlow 6s ease-in-out infinite;
}

@keyframes textFlow {
  0% { background-position: 0% 50%; }
  50% { background-position: 100% 50%; }
  100% { background-position: 0% 50%; }
}

.pill.animated:hover {
  transform: translateY(-2px) scale(1.03);
  border-color: rgba(99, 102, 241, 0.25);
  box-shadow: 0 14px 32px rgba(99, 102, 241, 0.15);
}

/* Diff Block */
.diff-block {
  margin-top: 28px;
  display: grid;
  gap: 16px;
}

.diff-item {
  border-radius: 24px;
  border: 1px solid var(--border-light);
  background: rgba(255, 255, 255, 0.65);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
  padding: 22px;
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 18px;
  align-items: start;
  box-shadow: 0 12px 28px rgba(15, 23, 42, 0.08);
  transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
}

.diff-item:hover {
  transform: translateY(-3px);
  box-shadow: 0 18px 38px rgba(15, 23, 42, 0.12);
  border-color: rgba(99, 102, 241, 0.15);
}

.diff-icon {
