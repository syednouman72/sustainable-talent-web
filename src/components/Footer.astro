<style>
  footer {
    padding: 80px 0 48px;
    border-top: 1px solid var(--border-light);
    color: var(--text-secondary);
    font-size: 14px;
    background: var(--bg-page);
    position: relative;
    overflow: hidden;
  }

  footer::before {
    content: "";
    position: absolute;
    inset: 0;
    background: 
      radial-gradient(1000px 400px at 30% 0%, rgba(99, 102, 241, 0.04), transparent 65%);
    pointer-events: none;
    opacity: 1;
  }

  footer::after {
    content: "";
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(99, 102, 241, 0.2), transparent);
    opacity: 0.5;
  }

  .footer-accent {
    position: absolute;
    top: -100px;
    right: 10%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(99, 102, 241, 0.15), transparent 70%);
    border-radius: 50%;
    filter: blur(80px);
    animation: float 8s ease-in-out infinite;
    pointer-events: none;
    opacity: 0.6;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) scale(1); }
    50% { transform: translateY(-30px) scale(1.1); }
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    position: relative;
  }

  /* Footer Grid */
  .footer-grid {
    display: grid;
    grid-template-columns: 1.3fr 1.7fr;
    gap: 64px;
    align-items: start;
    margin-bottom: 56px;
  }

  /* Brand Section */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  /* Footer Logo */
  .st-footer-logo {
    display: flex;
    align-items: center;
    gap: 10px;
    font-family: var(--heading-font);
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .st-footer-logo:hover {
    transform: translateX(3px);
  }

  .st-footer-mark {
    width: 36px;
    height: 36px;
    background: linear-gradient(135deg, var(--text-primary), var(--accent));
    color: #ffffff;
    font-size: 20px;
    font-weight: 700;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
    letter-spacing: -0.02em;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .st-footer-logo:hover .st-footer-mark {
    transform: scale(1.05);
    box-shadow: 0 6px 16px rgba(99, 102, 241, 0.25);
  }

  .st-footer-text {
    line-height: 1.1;
  }

  .st-footer-name {
    font-size: 16px;
    font-weight: 600;
    color: var(--text-primary);
    transition: color 0.3s ease;
  }

  .st-footer-logo:hover .st-footer-name {
    color: var(--accent);
  }

  .brand-logo {
    display: flex;
    align-items: center;
    gap: 14px;
    transition: transform 0.3s ease;
    cursor: pointer;
  }

  .brand-logo:hover {
    transform: translateX(3px);
  }

  .logo {
    height: 36px;
    width: auto;
    display: block;
    filter: brightness(1) contrast(1);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .brand-logo:hover .logo {
    filter: brightness(1.05) contrast(1.02);
    transform: translateY(-2px);
  }

  .footer-tagline {
    margin: 0;
    max-width: 400px;
    color: var(--text-secondary);
    line-height: 1.7;
    font-size: 15px;
  }

  /* Social Links */
  .social-links {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }

  .social-icon {
    width: 42px;
    height: 42px;
    border-radius: 12px;
    border: 1px solid var(--border-light);
    background: var(--bg-glass);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    box-shadow: 0 4px 12px rgba(15, 23, 42, 0.06);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .social-icon:hover {
    background: var(--accent);
    color: white;
    transform: translateY(-3px) scale(1.08);
    box-shadow: 0 12px 24px rgba(99, 102, 241, 0.25);
    border-color: transparent;
  }

  .social-icon:active {
    transform: translateY(-1px) scale(1.02);
  }

  .social-icon svg {
    transition: transform 0.3s ease;
  }

  .social-icon:hover svg {
    transform: scale(1.1);
  }

  /* Contact Info */
  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: 14px;
    margin-top: 8px;
    padding: 20px;
    border-radius: 18px;
    background: var(--bg-glass);
    border: 1px solid var(--border-light);
    box-shadow: 0 8px 20px rgba(15, 23, 42, 0.06);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    color: var(--text-secondary);
    transition: all 0.2s ease;
    padding: 4px;
    border-radius: 8px;
  }

  .contact-item:hover {
    background: rgba(99, 102, 241, 0.04);
    transform: translateX(2px);
  }

  .contact-item svg {
    flex-shrink: 0;
    margin-top: 2px;
    opacity: 0.7;
    color: var(--accent);
    transition: opacity 0.2s ease;
  }

  .contact-item:hover svg {
    opacity: 1;
  }

  .contact-item a {
    color: var(--text-secondary);
    transition: color 0.2s ease;
  }

  .contact-item a:hover {
    color: var(--accent);
  }

  /* Footer Columns */
  .footer-cols {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
  }

  .footer-col {
    display: flex;
    flex-direction: column;
    gap: 18px;
    padding: 24px;
    border-radius: 20px;
    background: var(--bg-glass);
    border: 1px solid var(--border-light);
    box-shadow: 0 8px 20px rgba(15, 23, 42, 0.06);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .footer-col:hover {
    transform: translateY(-2px);
    box-shadow: 0 16px 32px rgba(15, 23, 42, 0.10);
  }

  .footer-title {
    color: var(--text-primary);
    font-weight: 700;
    font-size: 15px;
    letter-spacing: 0.2px;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .footer-title::before {
    content: '';
    width: 3px;
    height: 16px;
    background: linear-gradient(180deg, var(--accent), rgba(99, 102, 241, 0.3));
    border-radius: 999px;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer-links a {
    color: var(--text-secondary);
    transition: all 0.2s ease;
    display: inline-block;
    padding: 4px 0;
    position: relative;
  }

  .footer-links a::before {
    content: '';
    position: absolute;
    left: 0;
    bottom: 2px;
    width: 0;
    height: 1px;
    background: var(--accent);
    transition: width 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .footer-links a:hover {
    color: var(--accent);
    transform: translateX(4px);
  }

  .footer-links a:hover::before {
    width: 100%;
  }

  /* Fine Print */
  .fineprint {
    padding-top: 36px;
    border-top: 1px solid var(--border-light);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 24px;
    color: var(--text-muted);
    font-size: 13px;
    position: relative;
  }

  .fineprint::before {
    content: '';
    position: absolute;
    top: -1px;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(99, 102, 241, 0.2), transparent);
  }

  .copyright {
    color: var(--text-muted);
    letter-spacing: 0.3px;
  }

  .legal-links {
    display: flex;
    gap: 24px;
    flex-wrap: wrap;
  }

  .legal-links a {
    color: var(--text-muted);
    transition: color 0.2s ease;
    position: relative;
  }

  .legal-links a::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0;
    height: 1px;
    background: var(--accent);
    transition: width 0.3s ease;
  }

  .legal-links a:hover {
    color: var(--accent);
  }

  .legal-links a:hover::after {
    width: 100%;
  }

  /* Responsive */
  @media (max-width: 1020px) {
    .footer-grid {
      grid-template-columns: 1fr;
      gap: 48px;
    }

    .footer-cols {
      grid-template-columns: repeat(2, 1fr);
      gap: 28px;
    }
  }

  @media (max-width: 640px) {
    footer {
      padding: 64px 0 36px;
    }

    .container {
      padding: 0 18px;
    }

    .footer-grid {
      gap: 36px;
      margin-bottom: 40px;
    }

    .footer-cols {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .footer-col {
      padding: 20px;
    }

    .fineprint {
      flex-direction: column;
      align-items: flex-start;
      gap: 16px;
      padding-top: 28px;
    }

    .legal-links {
      flex-direction: column;
      gap: 12px;
    }

    .brand-logo {
      font-size: 18px;
    }

    .logo {
      height: 32px;
    }

    .social-links {
      gap: 8px;
    }

    .social-icon {
      width: 40px;
      height: 40px;
    }
  }

  /* Footer Section */
  .footer-section h4 {
    margin: 0 0 20px;
    font-size: 14px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.8px;
    color: var(--text-primary);
    position: relative;
    display: inline-block;
  }
</style>























