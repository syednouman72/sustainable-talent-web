<script>
  // Reveal on scroll
  const els = document.querySelectorAll(".reveal");
  const io = new IntersectionObserver((entries) => {
    entries.forEach((e) => {
      if (e.isIntersecting) {
        e.target.classList.add("in");
        io.unobserve(e.target);
      }
    });
  }, { threshold: 0.12 });
  els.forEach(el => io.observe(el));

  // Search functionality (basic filter)
  const searchInput = document.querySelector('.search-input') as HTMLInputElement;
  if (searchInput) {
    searchInput.addEventListener('input', (e) => {
      const query = (e.target as HTMLInputElement).value.toLowerCase();
      const articles = document.querySelectorAll('.article-card');
      const faqs = document.querySelectorAll('.faq-item');

      // Filter articles
      articles.forEach(article => {
        const text = article.textContent?.toLowerCase() || '';
        (article as HTMLElement).style.display = text.includes(query) ? 'block' : 'none';
      });

      // Filter FAQs
      faqs.forEach(faq => {
        const text = faq.textContent?.toLowerCase() || '';
        (faq as HTMLElement).style.display = text.includes(query) ? 'block' : 'none';
      });
    });
  }
</script>
