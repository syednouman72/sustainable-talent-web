  margin: 12px 0;
  color: var(--text-secondary);
  line-height: 1.7;
}

.legal-section ul {
  margin: 16px 0;
  padding-left: 24px;
  color: var(--text-secondary);
}

.legal-section li {
  margin: 10px 0;
  line-height: 1.7;
}

.legal-section strong {
  color: var(--text-primary);
  font-weight: 600;
}

.important {
  padding: 16px;
  border-radius: 12px;
  border: 1px solid rgba(239,68,68,0.35);
  background: rgba(254,242,242,0.50);
  color: var(--text-primary);
  font-size: 14px;
