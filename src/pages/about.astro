  <div class="cta-accent" aria-hidden="true"></div>
  <div class="container">
    <div class="cta-card glass reveal scale-in" tabindex="0">
      <div class="cta-left">
        <p class="kicker">Work with us</p>

        <div class="pill animated" style="margin:10px 0 14px;">
          <span class="dot" aria-hidden="true"></span>
