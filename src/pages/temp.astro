<!-- CTA -->
<section class="section" id="get-started">
  <div class="container">
    <div class="cta-card reveal">
      <div>
        <p class="kicker">Ready to see TalentOS™ in action?</p>
        <h2>Request a personalized demo</h2>
        <p>
          See how TalentOS™ can transform your talent operations. 
          Our team will walk you through the platform and answer your questions.
        </p>
      </div>
      <div class="cta-row">
        <a class="btn primary" href={`${baseUrl}/contact`}>Request Demo</a>
        <a class="btn" href={`${baseUrl}/`}>Learn More</a>
      </div>
    </div>
  </div>
</section>

</MainLayout>

<style>
/* Container */
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
}

.section {
  padding: 96px 0;
  background: var(--bg-section);
  position: relative;
}

.section.light {
  position: relative;
  background:
    radial-gradient(1100px 520px at 20% 20%, rgba(99,102,241,0.08), transparent 60%),
    radial-gradient(1100px 520px at 80% 10%, rgba(56,189,248,0.06), transparent 62%),
    linear-gradient(180deg,
      rgba(255,255,255,0.70) 0%,
      rgba(255,255,255,0.55) 45%,
      rgba(255,255,255,0.70) 100%);
  isolation: isolate;
}

/* Typography */
.kicker {
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 0.8px;
  font-size: 12px;
  margin: 0 0 10px;
}

.lead {
  margin: 0;
  color: var(--text-secondary);
  font-size: 16px;
  max-width: 80ch;
}

.bullets {
  margin: 14px 0 0;
  padding: 0 0 0 18px;
  color: var(--text-secondary);
}

.bullets li {
  margin: 10px 0;
}

/* Buttons */
.btn {
