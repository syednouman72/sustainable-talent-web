/* Contact Card */
.contact-card {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 20px;
  padding: 24px;
  border-radius: 18px;
  border: 1px solid var(--border-light);
  background: rgba(255,255,255,0.75);
  margin: 24px 0;
