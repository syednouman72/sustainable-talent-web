
---
import MainLayout from '../layouts/main.astro';
import { baseUrl } from '../lib/base-url';

const pageClass = 'solutions';
---

<MainLayout pageClass={pageClass}>
<!-- HERO -->
<header class="hero" id="top">
  <div class="container">
    <div class="hero-grid">
      <div class="reveal">
        <div class="pill">Home</div>
        <h1>One partner to run your global contractor and recruiting engine</h1>
        <p class="subhead">
          We deliver the people, the process, and the operating layer. You get consistent execution across regions and functions without adding internal complexity.
        </p>

        <!-- <div class="toggle-row" role="group" aria-label="Engagement model toggle">
          <button class="toggle active" data-mode="vsp">Contingent and VSP</button>
          <button class="toggle" data-mode="rpo">Recruiting on Demand</button>
          <button class="toggle" data-mode="exec">Executive Search</button>
          <button class="toggle" data-mode="advisory">Workforce Advisory</button>
        </div> -->

        <div class="cta-row">
          <a class="btn primary" href="#get-started">Talk to our team</a>
          <a class="btn" href="#models">Compare models</a>
        </div>

    

      
          <div class="hero-logos">
            <p>Trusted by teams at</p>
            <div class="hero-logo-row">
              <img
                src="https://cdn.prod.website-files.com/692d9bd20e09dba5c24a10a4/695413546fff7c30034eda20_nvidia.svg"
                alt="Nvidia"
                loading="lazy"
              />
              <img
                src="https://cdn.prod.website-files.com/692d9bd20e09dba5c24a10a4/69541351c4a5ed344bb4da30_ford.svg"
                alt="Ford"
                loading="lazy"
              />
              <img
                src="https://cdn.prod.website-files.com/692d9bd20e09dba5c24a10a4/695413529ffcdf7a0f1756b3_mongodb.svg"
                alt="MongoDB"
                loading="lazy"
              />
              <img
                src="https://cdn.prod.website-files.com/692d9bd20e09dba5c24a10a4/69541352d2c166a97377dc63_microsoft.svg"
                alt="Microsoft"
                loading="lazy"
              />
              <img
                src="https://cdn.prod.website-files.com/692d9bd20e09dba5c24a10a4/6954134f7bb5c15903761362_amazon.svg"
                alt="Amazon"
                loading="lazy"
              />
            </div>
          </div>
      </div>

      <div class="float-card reveal" role="img" aria-label="Solutions snapshot">
        <div class="card-top">
          <div class="dots" aria-hidden="true">
            <span class="dot"></span><span class="dot"></span><span class="dot"></span>
          </div>
          <div id="snapTitle">Solution snapshot - Contingent and VSP</div>
          <div class="chip"><span class="spark good"></span> Proven</div>
        </div>

        <div class="card-body">
          <div class="metric-grid">
            <div class="metric">
              <div class="m-title">
                <span id="m1Label">Coverage</span>
                <span class="chip"><span class="spark"></span><span id="m1Tag">Global</span></span>
              </div>
              <div class="m-val" id="m1Val">150+ countries</div>
            </div>

            <div class="metric">
              <div class="m-title">
                <span id="m2Label">Employment backbone</span>
                <span class="chip"><span class="spark"></span><span id="m2Tag">US + Global</span></span>
              </div>
              <div class="m-val" id="m2Val">ADP + Deel</div>
            </div>

            <div class="metric wide">
              <div class="m-title">
                <span id="mwLabel">Outcomes focus</span>
                <span class="chip"><span class="spark"></span><span id="mwTag">Quality</span></span>
              </div>
              <div class="bars" aria-hidden="true">
                <div class="bar"><span data-w="72%"></span></div>
                <div class="bar"><span data-w="58%"></span></div>
                <div class="bar"><span data-w="80%"></span></div>
                <div class="bar"><span data-w="66%"></span></div>
              </div>
              <div id="mwNote" style="margin-top:12px; color:var(--text-muted); font-size:12px;">
                Calibrated submissions that drive stronger submission to interview conversion (target 30-40%).
              </div>
            </div>

            <div class="metric">
              <div class="m-title">
                <span id="m3Label">Employee satisfaction</span>
                <span class="chip"><span class="spark good"></span><span id="m3Tag">4.8/5</span></span>
              </div>
              <div class="m-val" id="m3Val">4.8</div>
            </div>

            <div class="metric">
              <div class="m-title">
                <span id="m4Label">Customer satisfaction</span>
                <span class="chip"><span class="spark good"></span><span id="m4Tag">98%</span></span>
              </div>
              <div class="m-val" id="m4Val">98%</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<section class="stats-strip" aria-label="Key differentiators">
  <div class="container">
    <div class="stats">
      <div class="stat reveal scale-in">
        <div class="stat-icon" aria-hidden="true">
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-num">98%</div>
        <div class="stat-label">Customer satisfaction</div>
        <div class="stat-note">Enterprise-grade delivery and support</div>
      </div>
      <div class="stat reveal scale-in">
        <div class="stat-icon" aria-hidden="true">
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
        </div>
        <div class="stat-num">4.8/5</div>
        <div class="stat-label">Consultant satisfaction</div>
        <div class="stat-note">High-trust experience for talent and teams</div>
      </div>
      <div class="stat reveal scale-in">
        <div class="stat-icon" aria-hidden="true">
          <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-num">150+</div>
        <div class="stat-label">Countries supported</div>
        <div class="stat-note">Global coverage through trusted partners</div>
      </div>
    </div>
  </div>
</section>

<!-- SOLUTION CARDS (LIGHT) -->
<section class="section light" id="solutions">
  <div class="container">
    <p class="kicker reveal">Core offerings</p>
    <h2 class="reveal">Four ways we plug into your business</h2>
    <p class="lead reveal">
      Same operating philosophy across every model: clear governance, predictable workflow, real-time visibility in TalentOS™, and a human-led experience that talent and hiring teams trust.
    </p>

    <div class="grid-3">
      <div class="card pop reveal" tabindex="0">
        <div class="title">Contingent Workforce Solutions</div>
        <div class="body">We run your contractor engine: sourcing, screening, offers, onboarding, payroll coordination, compliance tracking, and consultant support.</div>
        <ul class="bullets">
          <li>US W2 through ADP TotalSource</li>
          <li>Global engagement through Deel and local entities</li>
          <li>Program health reporting via TalentOS™</li>
        </ul>
        <div class="note">Best for teams scaling contractors across functions and regions.</div>
      </div>

      <div class="card pop reveal" tabindex="0">
        <div class="title">Recruiting as a Service</div>
        <div class="body">Embedded recruiters and sourcers that build pipelines and drive hiring outcomes fast, without the overhead of permanent headcount.</div>
        <ul class="bullets">
          <li>Calibrated submissions, fewer resumes</li>
          <li>Target 30-40% submission to interview</li>
          <li>Aligned to your ATS and interview loop</li>
        </ul>
        <div class="note">Best for surges, backfills, and hard-to-fill roles.</div>
      </div>

      <div class="card pop reveal" tabindex="0">
        <div class="title">Executive Search</div>
        <div class="body">A Heidrick-style experience with modern execution. High-signal shortlists, tight process, and stakeholder-ready narratives.</div>
        <ul class="bullets">
          <li>Discovery and scorecard alignment</li>
          <li>Market mapping and targeted outreach</li>
          <li>Confidential, high-touch candidate experience</li>
        </ul>
        <div class="note">Best for leaders that change outcomes and pace.</div>
      </div>
    </div>

    <div class="card pop reveal" style="margin-top:12px;" tabindex="0">
      <div class="title">Workforce Advisory</div>
      <div class="body">
        Design the operating model before you scale it. We help you build a clean system for contractor governance, recruiting workflows, and stakeholder visibility.
      </div>
      <div class="grid-2" style="margin-top:14px;">
        <div class="card mini" tabindex="0">
          <div class="title" style="font-size:15px;">What we assess</div>
          <ul class="bullets">
            <li>Vendor mix, intake quality, and bottlenecks</li>
            <li>Interview loop design and feedback discipline</li>
            <li>Compliance posture and documentation flow</li>
          </ul>
        </div>
        <div class="card mini" tabindex="0">
          <div class="title" style="font-size:15px;">What you get</div>
          <ul class="bullets">
            <li>Operating model and governance</li>
            <li>Workflow and reporting blueprint</li>
            <li>90-day execution plan with milestones</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- MODELS -->
<section class="section" id="models">
  <div class="container">
    <p class="kicker reveal">Engagement models</p>
    <h2 class="reveal">Choose the model. Keep the engine.</h2>
    <p class="lead reveal">
      Different companies need different levers. We keep the delivery system consistent so performance stays predictable.
    </p>

    <div class="table model-pop reveal" role="region" aria-label="Engagement model comparison">
      <div class="row head">
        <div class="cell">Capability</div>
        <div class="cell">Contingent and VSP</div>
        <div class="cell">Recruiting on Demand</div>
      </div>

      <div class="row model-row" tabindex="0">
        <div class="cell">Primary outcome</div>
        <div class="cell">Contractor coverage with governance</div>
        <div class="cell">Hiring velocity for priority roles</div>
      </div>

      <div class="row model-row" tabindex="0">
        <div class="cell">Visibility layer</div>
        <div class="cell"><span class="badge"><span class="ok"></span> TalentOS™ dashboards</span></div>
        <div class="cell"><span class="badge"><span class="ok"></span> TalentOS™ dashboards</span></div>
      </div>

      <div class="row model-row" tabindex="0">
        <div class="cell">Compliance posture</div>
        <div class="cell">Tracked documentation, onboarding, renewals</div>
        <div class="cell">Workflow alignment, handoffs to HR</div>
      </div>

      <div class="row model-row" tabindex="0">
        <div class="cell">Who we embed</div>
        <div class="cell">Program delivery plus recruiter bench</div>
        <div class="cell">Recruiters and sourcers, calibrated</div>
      </div>

      <div class="row model-row" tabindex="0">
        <div class="cell">Typical win</div>
        <div class="cell">Less chaos, cleaner governance</div>
        <div class="cell">Better conversion and faster decisions</div>
      </div>
    </div>

    <div class="note reveal" style="margin-top:12px;">
      If you want, we can add a third column for Executive Search or MSP partnership style engagements.
    </div>
  </div>
</section>

<!-- GLOBAL FOUNDATION (LIGHT) -->
<section class="section light" id="global-foundation">
  <div class="container">
    <p class="kicker reveal">Global foundation</p>
    <h2 class="reveal">One global model, two trusted employment backbones</h2>
    <p class="lead reveal">
      Your extended workforce runs on a proven foundation. In the United States we use ADP TotalSource for W2 employment. Globally we engage contractors through Deel and compliant local entities.
    </p>

    <div class="grid-2">
      <div class="card pop reveal" tabindex="0">
        <div class="title">United States - W2 consultants</div>
        <div class="body">A consistent experience for consultants and hiring teams with clean documentation and support.</div>
        <ul class="bullets">
          <li>Employment, payroll, taxes, benefits via ADP TotalSource</li>
          <li>Onboarding, background checks, and agreements</li>
          <li>Aligned processes across client engagements</li>
        </ul>
      </div>

      <div class="card pop reveal" tabindex="0">
        <div class="title">Global markets - local compliance</div>
        <div class="body">Fast, compliant engagement across countries with one operating partner.</div>
        <ul class="bullets">
          <li>Local tax and compliance handled in-country</li>
          <li>Currency and time zone support</li>
          <li>One relationship, multiple countries covered</li>
        </ul>
      </div>
    </div>
  </div>
</section>

<!-- HOW WE DELIVER -->
<section class="section" id="delivery">
  <div class="container">
    <p class="kicker reveal">Delivery</p>
    <h2 class="reveal">What makes the engine work</h2>
    <p class="lead reveal">
      We focus on signal, workflow discipline, and feedback loops. That is how you beat industry averages without spamming hiring managers with resumes.
    </p>

    <div class="grid-3">
      <div class="card pop reveal" tabindex="0">
        <div class="title">Calibration first</div>
        <div class="body">We define must-haves, deal breakers, and the bar. Then we submit fewer candidates with stronger context.</div>
        <div class="note">Outcome: better submission to interview conversion.</div>
      </div>

      <div class="card pop reveal" tabindex="0">
        <div class="title">Fast feedback loops</div>
        <div class="body">Approvals and refinements are built into the workflow so the engine learns quickly and stays aligned.</div>
        <div class="note">Outcome: faster decisions with less back and forth.</div>
      </div>

      <div class="card pop reveal" tabindex="0">
        <div class="title">Program health</div>
        <div class="body">Visibility into throughput, aging, renewals, and risk so leadership can plan ahead with confidence.</div>
        <div class="note">Outcome: fewer surprises, smoother renewals.</div>
      </div>
    </div>
  </div>
</section>

<!-- CTA -->
<section class="section light" id="get-started">
  <div class="container">
    <div class="cta-card pop reveal" tabindex="0">
      <div>
        <p class="kicker">Get started</p>
        <h2 style="margin-bottom:10px;">Tell us what you are trying to build</h2>
        <p>
          Share your hiring goals, locations, and timelines. We will send a quick model overview and a suggested rollout plan.
        </p>
        <div class="helper">One thoughtful follow-up. No spam.</div>
      </div>

      <form class="form" id="home-form" action="#" method="post">
        <div class="form-row" style="display: flex; gap: 10px; width: 100%; flex-wrap: wrap; justify-content: flex-end;">
          <input class="input" type="email" name="email" placeholder="Enter your email address" required />
          <button class="btn primary" type="submit">Submit</button>
        </div>
        <div id="home-form-status" style="display: none; width: 100%; margin-top: 10px; font-size: 13px; text-align: right;"></div>
      </form>
    </div>
  </div>
</section>
</MainLayout>

<style>
/* Hero */
.hero {
  padding: 92px 0 46px;
  background: var(--bg-section);
  position: relative;
  overflow: hidden;
}

.hero:before {
  content: "";
  position: absolute;
  inset: -200px -200px auto -200px;
  height: 520px;
  background: linear-gradient(120deg, rgba(99, 102, 241, 0.08), transparent 55%);
  pointer-events: none;
}

.hero-grid {
  display: grid;
  grid-template-columns: 1.1fr 0.9fr;
  gap: 34px;
  align-items: center;
  position: relative;
  z-index: 1;
}

.pill {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 7px 10px;
  border-radius: 999px;
  border: 1px solid var(--border-light);
  background: rgba(255, 255, 255, 0.75);
  color: var(--text-secondary);
  font-size: 12px;
  letter-spacing: 0.6px;
  text-transform: uppercase;
  box-shadow: 0 10px 22px rgba(15, 23, 42, 0.05);
}

.subhead {
  margin: 0 0 18px;
  color: var(--text-secondary);
  font-size: 18px;
  max-width: 78ch;
}

.cta-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
  margin-top: 18px;
  align-items: center;
}

.microproof {
  margin-top: 14px;
  color: var(--text-muted);
  font-size: 13px;
  max-width: 80ch;
}

/* Toggle Row */
.toggle-row {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-top: 18px;
  align-items: center;
}

.toggle {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 11px 14px;
  border-radius: 999px;
  font-weight: 600;
  font-size: 14px;
  border: 1px solid var(--border-light);
  background: rgba(255, 255, 255, 0.85);
  color: var(--text-primary);
  cursor: pointer;
  transition: all 0.2s ease;
  white-space: nowrap;
  box-shadow: 0 8px 18px rgba(15, 23, 42, 0.06);
  user-select: none;
}

.toggle:hover {
  transform: translateY(-1px);
  background: rgba(255, 255, 255, 0.95);
  border-color: rgba(15, 23, 42, 0.12);
}

.toggle.active {
  border: none;
  background: var(--accent);
  color: #fff;
  box-shadow: 0 16px 30px rgba(99, 102, 241, 0.18);
}

.toggle.active:hover {
  filter: brightness(0.96);
  transform: translateY(-1px);
}

/* Floating Card */
.float-card {
  border-radius: 28px;
  border: 1px solid var(--border-light);
  background: var(--bg-glass);
  box-shadow: 0 28px 70px rgba(15, 23, 42, 0.10);
  overflow: hidden;
  position: relative;
  min-height: 360px;
  animation: floaty 7s ease-in-out infinite;
  transform: translateZ(0);
  backdrop-filter: blur(8px);
}

.float-card:after {
  content: "";
  position: absolute;
  inset: -40%;
  background: conic-gradient(from 180deg,
    rgba(99, 102, 241, 0.0),
    rgba(99, 102, 241, 0.08),
    rgba(56, 189, 248, 0.08),
    rgba(99, 102, 241, 0.0)
  );
  filter: blur(32px);
  opacity: 0.55;
  animation: spin 12s linear infinite;
  pointer-events: none;
  mix-blend-mode: multiply;
}

@keyframes floaty {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-10px); }
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.float-card > * {
  position: relative;
  z-index: 1;
}

.card-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  color: var(--text-muted);
  font-size: 12px;
  padding: 14px 16px;
  border-bottom: 1px solid var(--border-light);
  background: rgba(255, 255, 255, 0.35);
}

.dots {
  display: flex;
  gap: 7px;
}

.dot {
  width: 10px;
  height: 10px;
  border-radius: 999px;
  background: rgba(15, 23, 42, 0.10);
}

.dot:nth-child(1) { background: rgba(15, 23, 42, 0.18); }
.dot:nth-child(2) { background: rgba(15, 23, 42, 0.14); }
.dot:nth-child(3) { background: rgba(15, 23, 42, 0.10); }

.chip {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 6px 10px;
  border-radius: 999px;
  border: 1px solid var(--border-light);
  background: rgba(255, 255, 255, 0.55);
  color: var(--text-secondary);
  font-size: 12px;
  white-space: nowrap;
  backdrop-filter: blur(8px);
}

.spark {
  width: 10px;
  height: 10px;
  border-radius: 999px;
  background: rgba(99, 102, 241, 0.85);
  box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.14);
}

.spark.good {
  background: rgba(34, 197, 94, 0.85);
  box-shadow: 0 0 0 4px rgba(34, 197, 94, 0.14);
}

.card-body {
  padding: 16px;
}

.metric-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 12px;
}

.metric {
  border-radius: 16px;
  border: 1px solid var(--border-light);
  background: rgba(255, 255, 255, 0.55);
  padding: 14px;
  min-height: 96px;
  backdrop-filter: blur(8px);
}

.m-title {
  font-size: 12px;
  color: var(--text-muted);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
}

.m-val {
  margin-top: 10px;
  font-size: 22px;
  font-weight: 900;
  letter-spacing: -0.4px;
  color: var(--text-primary);
}

.metric.wide {
  grid-column: 1 / -1;
  min-height: 168px;
}

.bars {
  margin-top: 12px;
  display: grid;
  gap: 8px;
}

.bar {
  height: 10px;
  border-radius: 999px;
  background: rgba(15, 23, 42, 0.06);
  overflow: hidden;
  border: 1px solid var(--border-light);
}

.bar > span {
  display: block;
  height: 100%;
  width: 10%;
  background: linear-gradient(90deg, rgba(99, 102, 241, 0.75), rgba(56, 189, 248, 0.65));
  border-radius: 999px;
  transition: width 900ms ease;
}

/* Sections */
.section {
  padding: 96px 0;
  background: var(--bg-section);
}

.section.light {
  position: relative;
  background:
    radial-gradient(1100px 520px at 15% 10%, rgba(99, 102, 241, 0.08), transparent 60%),
    radial-gradient(1100px 520px at 85% 0%, rgba(99, 102, 241, 0.06), transparent 62%),
    linear-gradient(180deg, rgba(255, 255, 255, 0.90), rgba(245, 246, 248, 0.85));
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
}

.kicker {
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 0.8px;
  font-size: 12px;
  margin: 0 0 10px;
}

.lead {
  margin: 0;
  color: var(--text-secondary);
  font-size: 16px;
  max-width: 90ch;
}

/* Grids */
.grid-3 {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
  margin-top: 22px;
}

.grid-2 {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
  margin-top: 22px;
  align-items: stretch;
}

/* Cards */
.card {
  border-radius: 28px;
  border: 1px solid var(--border-light);
  background: var(--bg-glass);
  padding: 20px;
  box-shadow: 0 20px 40px rgba(15, 23, 42, 0.08);
  position: relative;
  overflow: hidden;
  transform: translateZ(0);
  backdrop-filter: blur(8px);
}

.section.light .card {
  background: rgba(255, 255, 255, 0.75);
  border-color: rgba(15, 23, 42, 0.10);
