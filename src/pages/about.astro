  const els = document.querySelectorAll(".reveal");
  const io = new IntersectionObserver((entries) => {
    entries.forEach((e) => {
      if (e.isIntersecting) {
        e.target.classList.add("in");
        io.unobserve(e.target);
      }
    });
  }, { threshold: 0.10 });
  els.forEach(el => io.observe(el));

  // Premium pill hover tracking
  const pills = document.querySelectorAll(".pill.animated");
  pills.forEach(p => {
    p.addEventListener("mousemove", (e: Event) => {
      const mouseEvent = e as MouseEvent;
      const r = p.getBoundingClientRect();
      const x = ((mouseEvent.clientX - r.left) / r.width) * 100;
      (p as HTMLElement).style.setProperty("--mx", x.toFixed(2) + "%");
    });
    p.addEventListener("mouseleave", () => (p as HTMLElement).style.setProperty("--mx", "50%"));
